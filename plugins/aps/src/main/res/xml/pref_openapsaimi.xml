<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:key="@string/key_openapsaimi_settings"
        android:title="@string/openapsaimi"
        app:initialExpandedChildrenCount="0">

        <app.aaps.core.keys.AdaptiveSwitchPreference
            android:key="@string/count_steps_watch"
            android:title="@string/countsteps_watch_title"
            android:summary="@string/countsteps_watch_summary" />

        <app.aaps.core.keys.AdaptiveSwitchPreference
            android:key="@string/key_enable_basal"
            android:title="@string/Enable_basal_title"
            android:summary="@string/Enable_basal_summary" />

        <app.aaps.core.keys.AdaptiveSwitchPreference
            android:key="@string/key_enable_smb"
            android:title="@string/Enable_SMB_title"
            android:summary="@string/Enable_SMB_summary" />

        <app.aaps.core.validators.AdaptiveDoublePreference
            android:dialogMessage="@string/openapsma_max_basal_summary"
            android:key="@string/key_openaps_max_basal"
            android:title="@string/openapsma_max_basal_title" />


        <app.aaps.core.validators.AdaptiveDoublePreference
            android:dialogMessage="@string/openapssmb_max_iob_summary"
            android:key="@string/key_openaps_smb_max_iob"
            android:title="@string/openapssmb_max_iob_title" />

        <app.aaps.core.validators.AdaptiveDoublePreference
            android:dialogMessage="@string/openapsaimi_maxsmb_summary"
            android:key="@string/key_openapsaimi_max_smb"
            android:title="@string/openapsaimi_maxsmb_title" />

        <app.aaps.core.validators.AdaptiveDoublePreference
            android:dialogMessage="@string/oaps_aimi_weight_summary"
            android:key="@string/key_aimiweight"
            android:title="@string/oaps_aimi_weight_title" />

        <app.aaps.core.validators.AdaptiveDoublePreference
            android:dialogMessage="@string/oaps_aimi_tdd7_summary"
            android:key="@string/key_tdd7"
            android:title="@string/oaps_aimi_tdd7_title" />

        <app.aaps.core.validators.AdaptiveDoublePreference
            android:dialogMessage="@string/oaps_aimi_cho_summary"
            android:key="@string/key_cho"
            android:title="@string/oaps_aimi_cho_title" />

        <app.aaps.core.validators.AdaptiveIntPreference
            android:dialogMessage="@string/oaps_aimi_interval_summary"
            android:key="@string/key_oaps_aimi_interval"
            android:title="@string/oaps_aimi_interval_title" />

        <app.aaps.core.validators.AdaptiveIntPreference
            android:dialogMessage="@string/DynISF_Adjust_summary"
            android:key="@string/key_DynISF_Adjust"
            android:title="@string/DynISF_Adjust_title" />

        <app.aaps.core.validators.AdaptiveIntPreference
            android:dialogMessage="@string/oaps_aimi_mealAdjFact_summary"
            android:key="@string/key_oaps_aimi_mealAdjFact"
            android:title="@string/oaps_aimi_mealAdjFact_title" />

        <app.aaps.core.validators.AdaptiveDoublePreference
            android:dialogMessage="@string/oaps_aimi_mealFactor_summary"
            android:key="@string/key_oaps_aimi_meal_factor"
            android:title="@string/oaps_aimi_mealFactor_title" />

        <app.aaps.core.validators.AdaptiveDoublePreference
            android:dialogMessage="@string/oaps_aimi_morning_factor_summary"
            android:key="@string/key_oaps_aimi_morning_factor"
            android:title="@string/oaps_aimi_morning_factor_title" />

        <app.aaps.core.validators.AdaptiveDoublePreference
            android:dialogMessage="@string/oaps_aimi_afternoon_factor_summary"
            android:key="@string/key_oaps_aimi_afternoon_factor"
            android:title="@string/oaps_aimi_afternoon_factor_title" />

        <app.aaps.core.validators.AdaptiveDoublePreference
            android:dialogMessage="@string/oaps_aimi_evening_factor_summary"
            android:key="@string/key_oaps_aimi_evening_factor"
            android:title="@string/oaps_aimi_evening_factor_title" />

        <androidx.preference.PreferenceScreen
            android:key="high_BG_settings"
            android:title="High BG Preferences">

            <app.aaps.core.validators.AdaptiveDoublePreference
